<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marcosdefreitas.maakereview.relativeLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_02">

        <Space
            android:id="@+id/space_02"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true" />


        <Space
            android:id="@+id/space_03"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_above="@+id/space_06"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space_02" />


        <Space
            android:id="@+id/space_04"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_above="@+id/space_06"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/space_02" />


        <Space
            android:id="@+id/space_05"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_above="@+id/space_06"
            android:layout_below="@+id/space_02"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/space_04"
            android:layout_toRightOf="@+id/space_03" />


        <Space
            android:id="@+id/space_06"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
